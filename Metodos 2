package projetometodos;

import java.util.Scanner;

public class ProjetoMetodos {

    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
      String menssagem;
      int v1, v2;
        System.out.println("Digite uma menssagem");
        menssagem = ler.nextLine();
        print(menssagem);
        System.out.println("Digite um número");
        v1 = ler.nextInt();
        System.out.println("Digite outro número");
        v2 = ler.nextInt();
        add(v1, v2);
    }
    public static void print(String texto){
        System.out.println(texto);
    }
    public static void add(int valor1,int valor2){
        System.out.println("A soma dos valores é: " + (valor1 + valor2));
        
    }
}
